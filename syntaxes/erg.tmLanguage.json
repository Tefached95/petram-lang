{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ergor",
	"fileTypes": [
		"erg"
	],
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#brackets"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.erg",
					"match": "\\b(if|else|foreach|in|match|func|struct|trait|new)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.erg",
					"match": "\\b(Int|Float|String|Bool|List|Option|Result)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other.erg",
					"match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.erg",
					"match": "\\b([0-9]+(\\.?[0-9]*)|\\.?[0-9]+)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.erg",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.erg",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.erg",
					"match": "#.*$"
				},
				{
					"name": "comment.block.erg",
					"begin": "\\{#",
					"end": "#\\}"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.erg",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\[\\|)"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.erg",
					"match": "(\\:=|\\:|\\=|\\->|\\=>|\\+|\\-|\\*|\\/|\\%|\\==|\\!=|\\<|\\>|\\<=|\\>=|and|or|not|\\|\\>)"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "punctuation.section.brackets.erg",
					"match": "(\\[\\||\\|\\]|\\{\\||\\|\\})"
				}
			]
		}
	},
	"scopeName": "source.erg"
}